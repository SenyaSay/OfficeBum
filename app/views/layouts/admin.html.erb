<!DOCTYPE html>
<html>
<head>
    <title>OfficeBum</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "admin/products" %>
    <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <div class="nav-collapse">
          <ul class="nav">
            <li><%= link_to(t('.panel'), admin_root_path)%></li>
            <li><%= link_to(t('.products'), admin_products_path) %></li>
            <li><%= link_to(t('.characteristics'), admin_characteristics_path) %></li>
            <li><%= link_to(t('.orders'), admin_orders_path) %></li>
            <li><%= link_to(t('.categories'), admin_categories_path) %></li>
            <li><%= link_to(t('.logout'), destroy_admin_session_path, :method => :delete) %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="span9"><%= yield %></div>
    </div>
  </div>
</body>
</html>
