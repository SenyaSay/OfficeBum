<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
  <title>OfficeBum</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="wrapper">


  <div id="header"></div>

  <div id='middle'>

    <div id="container">
      <div class="sidebar" id="sideLeft">
        <%= yield :top_categories %>
        <%= yield :subcategories %>
        <div id="stats"></div>
      </div>

      <div id="content">
        <%= yield %>
      </div>

      <div class="sidebar" id="sideRight">
        <%= yield :top_products %>
        <div id="search"></div>
        <div id="sign_in"></div>
        <div id="contacts"></div>
      </div>
    </div>

  </div>

  <div id="footer"></div>
</div>

</body>
</html>
