<p>
  <b> <%= t('.name') %>: </b>
  <%= @product.name %>
</p>

<p>
  <b> <%= t('.price') %>: </b>
  <%= @product.price %>
</p>

<p>
  <b> <%= t('.description') %>: </b>
  <%= @product.description %>
</p>

<p>
  <%= image_tag(@product.image_url(:big_thumb)) if @product.image? %>
</p>

<p><%= link_to image_tag("/assets/cart.jpg"), cart_path(:id => @product.id), :method => :put, :remote => true %></p>

<p><b> <%= t('.characteristics') %>: </b></p>
<div class='characteristics'>
  <table>
    <tr>
      <th> <%= t('.name') %> </th>
      <th> <%= t('.value') %> </th>
    </tr>
  <% @characteristics.each do |characteristic|%>
    <tr>
     <td><%= characteristic.name %></td>
     <td><%= @product.characteristic_value(characteristic) %></td>
    </tr>
  <% end %>
  </table>
</div>

<%= link_to t('.back'), root_path %>
