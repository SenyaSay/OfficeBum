<% content_for :side_left do %>
    <ul>
        <% @menu.each do |item| %>
            <li><%= link_to_unless_current item[:name], :top => item[:top], :value => item[:value] %></li>
        <% end %>
    </ul>
<% end %>

<% @products.each do |product| %> 
  <div class="contentBlocks">
    <%= link_to( raw("
    <div>
      #{image_tag(product.image_url(:thumb)) if product.image?}<br />
      #{product.name}
    </div>
    "), product_path(product))%>
    <p>
      Price: <%= product.price %>
      <%= link_to image_tag("/assets/cart.jpg"), cart_path(:id => product.id), :method => :put, :remote => true %>
    </p>
  </div>  
<% end %>
<%= paginate @products %>
