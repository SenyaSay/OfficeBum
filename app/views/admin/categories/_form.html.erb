<%= form_for @category, :url => { :action => action }, :html => { :class => 'form-horizontal' } do |f| %>
  <%= flash[:error] %>

<div class="control-group">
  <%= f.label :name, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :name, :class => 'text_field' %>
  </div>
  <%= f.label :parent_id, :class => 'control-label' %>
  <div class="controls">
    <%= f.select :parent_id, categoty_options(@category), :class => 'select' %>
  </div>
</div>
<div class="characteristic_button">
  <%= f.submit t('button.create'), :class => 'btn btn-primary' %>
  <%= link_to t('button.back'), admin_categories_path, :class => 'btn' %>
</div>
<% end %>

