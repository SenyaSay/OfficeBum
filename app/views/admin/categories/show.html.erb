<%- model_class = Category -%>
<div class="page-header">
  <h3><%= t("titles.#{controller.controller_name}.#{controller.action_name}") %></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t('.name') %>:</strong></dt>
  <dd><%= @category.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('button.back'), admin_categories_path, :class => 'btn'  %>
  <%= link_to t('button.edit'), edit_admin_category_path(@category), :class => 'btn' %>
  <%= link_to t('button.delete'),
              admin_category_path(@category),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
