<%= form_for @product, :url => { :action => "update" }, :html => {:multipart => true} do |f| %>
  <%= flash[:error] %>
  <div class="product_content"> 
    <p> 
      Наименование товара: 
      <%= f.text_field :name %> <br /> 
      Цена:
      <%= f.text_field :price %> <br />
      Oписание товара: 
      <%= f.text_area :description %> <br />
      Путь к файлу картинки:
      <%= f.file_field :image %> 
      <%= image_tag @product.image_url(:thumb)%>
    </p>
  </div>

  <div class='characteristics'>
    <%= f.fields_for :product_characteristics do |pc| %>
      <% @characteristics.each do |characteristic| %>
        <%= characteristic.name %>
        <%= pc.text_field(characteristic.id, :value => @product.characteristic_value(characteristic)) %> <br/>
      <% end %>
    <% end %>
  </div>
  
  <div class="product_button">
    <%= f.submit "Сохранить изменения" %>
  </div>
<% end %>
<%= link_to 'Back', admin_products_path %>
