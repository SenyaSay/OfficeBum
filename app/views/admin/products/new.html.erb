<%= form_for @product, :url => { :action => "create" }, :html => { :multipart => true } do |f| %>
  <%= flash[:error] %>
  <div class="product_content">
    <p> Наименование товара: 
      <%= f.text_field :name %> <br />
      Цена:
      <%= f.text_field :price %> <br />
      Описание товара: 
      <%= f.text_area :description %> <br />
      Путь к файлу картинки:
      <%= f.file_field :image %>
    </p>
  </div>

    <div class='characteristics'>
        <%= f.fields_for :product_characteristics do |pc| %>
            <% @characteristics.each do |characteristic|%>
                <%= characteristic.name %>
                <%= pc.text_field(characteristic.id) %> <br/>
            <% end %>
        <% end %>
    </div>

  <div class="product_button">
    <%= f.submit "Добавить товар" %>
  </div>
<% end %>
<%= link_to 'Back', admin_products_path %>
