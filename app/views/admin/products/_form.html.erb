<%= form_for @product, :url => { :action => action }, :html => { :multipart => true, :class => 'form-horizontal' } do |f| %>
    <%= flash[:error] %>
    <div class="control-group">
      <%= f.label t('.name'), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
      <%= f.label t('.category'), :class => 'control-label' %>
      <div class="controls">
        <%= f.select(:category_id, categoty_options(@category), :class => 'select') %>
      </div>
      <%= f.label t('.price'), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :price, :class => 'text_field' %>
      </div>
      <%= f.label t('.description'), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :class => 'text_area' %>
      </div>
      <%= f.label t('.image'), :class => 'control-label' %>
      <div class="controls">
        <%= f.file_field :image, :class => 'file_field' %>
        <%= image_tag (@product.image_url(:thumb) || '/assets/cart.jpg'), :name => "preview", :id => "preview", :size => "50x50" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.fields_for :product_characteristics do |pc| %>
          <% @characteristics.each do |characteristic|%>
              <%= pc.label characteristic.name, :class => 'control-label' %>
              <div class="controls">
                <%= pc.text_field(characteristic.id, :value => @product.characteristic_value(characteristic))%>
              </div>
          <% end %>
      <% end %>
    </div>

    <div class="product_button">
      <%= f.submit t('.submit'), :class => 'btn btn-primary' %>
      <%= link_to t('.back'), admin_products_path, :class => 'btn' %>
    </div>
<% end %>

