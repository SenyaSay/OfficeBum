<%= form_for @product, :url => { :action => action }, :html => { :multipart => true, :class => 'form-horizontal' } do |f| %>
    <%= flash[:error] %>
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
      <%= f.label :category, :class => 'control-label' %>
      <div class="controls">
        <%= f.select(:category_id, categoty_options(@category), :class => 'select') %>
      </div>
      <%= f.label :price, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :price, :class => 'text_field' %>
      </div>
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :class => 'text_area' %>
      </div>
      <%= f.label :image, :class => 'control-label' %>
      <div class="controls">
        <%= f.file_field :image, :class => 'file_field' %>
        <%= image_tag (@product.image_url(:thumb) || '/assets/cart.png'), :name => "preview", :id => "preview", :size => "50x50" %>
      </div>
      <%= f.label :brand, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :brand, :class => 'text_field' %>
      </div>
      <%= f.label :code, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :code, :class => 'text_field' %>
      </div>
    </div>

    <div class="product_button">
      <%= f.submit t('button.create'), :class => 'btn btn-primary' %>
      <%= link_to t('button.back'), admin_products_path, :class => 'btn' %>
    </div>
<% end %>

