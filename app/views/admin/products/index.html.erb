<%- model_class = Product -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.pluralize %></h3>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.category') %></th>
      <th><%= t('.price') %></th>
      <th><%= t('.description') %></th>
      <th><%= t('.image') %></th>
      <th><%= t('.actions') %></th>
    </tr>
  </thead>
  <tbody>
<% @products.each do |product| %>
  <tr>
    <td> <%= link_to product.name, admin_product_path(product) %> </td>
    <td> <%= product.category.try(:name) %> </td>
    <td> <%= product.price %> </td>
    <td> <%= product.description %> </td>
    <td> <%= image_tag(product.image_url(:thumb)) if product.image? %> </td>
    <td> <%= link_to t('.edit'), edit_admin_product_path(product), :class => 'btn btn-mini' %> </td>
    <td> <%= link_to t('.delete'), admin_product_path(product), :method => :delete, :class => 'btn btn-mini btn-danger' %> </td>
  </tr>
<% end %>
  </tbody>
</table>
<%= paginate @products%>
<%= link_to t('.add'), new_admin_product_path, :class => 'btn btn-primary' %>
<%= link_to t('.back_to_admin_panel'), admin_root_path, :class => 'btn' %>

