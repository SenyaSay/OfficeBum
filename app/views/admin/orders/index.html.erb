<h1> Orders </h1>

<table>
  <tr> 
    <th> User </th>
    <th> Products </th>
    <th> Total price </th>
    <th> Status </th>
    <th> Description </th>
    <th></th>
  </tr>
<% @orders.each do |order| %>
  <tr>
    <td> <%= order.user.email %> </td>
    <td> <%= products(order.order_products) %> </td>
    <td> <%= order.total_price %> </td>
    <td> <%= order.status %> </td>
    <td> <%= order.description %> </td>
    <td> <%= link_to 'Edit', edit_admin_order_path(order) %> </td>
  </tr>	
<% end %>
</table>
<%= paginate @orders %>
<%= link_to('Back to admin panel', admin_root_path) %>

