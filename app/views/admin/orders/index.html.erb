<h1> Orders </h1>

<table class="orders">
  <tr> 
    <th> User </th>
    <th> Products </th>
    <th> Total price </th>
    <th> Status </th>
    <th> Description </th>
    <th></th>
  </tr>
<% @orders.each do |order| %>
  <tr>
    <td> <%= order.user.email %> </td>
    <td> <%= products(order.order_products) %> </td>
    <td> <%= order.total_price %> </td>
    <td> <%= select :status, nil, Order::STATUS, { selected: order.status }, { id: order.id } %> </td>
    <td> <%= order.description %> </td>
    <td> <%= link_to 'Delete', admin_order_path(order), :method => :delete %> </td>
  </tr>
<% end %>
</table>
<%= paginate @orders %>

<%= link_to('Back to admin panel', admin_root_path) %>

